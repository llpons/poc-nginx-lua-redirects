# https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.{py,sql}]
indent_size = 4

[{.,}*.{y{a,}ml}]
indent_size = 2

[*.{md,txt}]
indent_size = 4
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
